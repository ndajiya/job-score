<h1>Your Dashboard</h1>
<p>Upload up to three resumes, cover letters, and job descriptions.</p>

<div>
  <a href="#" class="paste">Paste a Resume</a>
  <div class="inactive">
    <%= form_for @resume, :url => {:controller => :resumes, :action => "create"}  do |f| %>
    <%= f.text_field :name, placeholder: "Resume Name" %>

    <%= f.text_field :body, placeholder: "Paste Resume Here" %>

    <%= f.submit "Add Resume" %>
    <% end %>
  </div>
</div>
<input type="file" accept="image/*" capture="camera">

<% if !current_user.resumes.empty? %>
  <div>
    <h3>Your Resumes</h3>
    <% current_user.resumes.each do |resume| %>
    <%= resume.name %>
    <% end %>
  </div>
<% end %>

<div>
  <a href="#" class="paste">Paste a Cover Letter</a>
  <div class="inactive">
    <%= form_for @cover_letter, :url => {:controller => :cover_letters, :action => "create"}  do |f| %>
    <%= f.text_field :name, placeholder: "Cover Letter Name" %>

    <%= f.text_field :body, placeholder: "Paste Cover Letter Here" %>

    <%= f.submit "Add Cover Letter" %>
    <% end %>
  </div>
</div>
<input type="file" accept="image/*" capture="camera">

<% if !current_user.cover_letters.empty? %>
  <div>
    <h3>Your Cover Letters</h3>
    <% current_user.cover_letters.each do |cover_letter| %>
      <%= cover_letter.name %>
    <% end %>
  </div>
<% end %>

<div>
  <a href="#" class="paste">Paste a Job Description</a>
  <div class="inactive">
    <%= form_for @job, :url => {:controller => :jobs, :action => "create"}  do |f| %>
    <%= f.text_field :company_name, placeholder: "Company Name" %>
    <%= f.text_field :job_title, placeholder: "Job Title" %>

    <%= f.text_field :description, placeholder: "Paste Job Description Here" %>

    <%= f.submit "Add Job" %>
    <% end %>
  </div>
</div>
<input type="file" accept="image/*" capture="camera">

<% if !current_user.jobs.empty? %>
  <div>
    <h3>Your Jobs</h3>
    <% current_user.jobs.each do |job| %>
      <%= job.company_name %>: <%= job.job_title %>
    <% end %>
  </div>
<% end %>
